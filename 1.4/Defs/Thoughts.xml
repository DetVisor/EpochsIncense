<?xml version="1.0" encoding="utf-8" ?>
<Defs>


 <!--Incense-->
 

  <ThoughtDef MayRequire="OskarPotocki.VanillaFactionsExpanded.Core">
    <defName>IncenseThought</defName>
    <workerClass>VanillaFurnitureExpanded.ThoughtWorker_ThoughtFromNearbyThingDef</workerClass>
    <stages>
      <li>
        <label>pleasant smell</label>
        <description>The perfume of incense calms my mind and my soul.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
    <modExtensions>
      <li Class="VanillaFurnitureExpanded.ThoughtGiverByProximityDefExtension">
        <ThingToGiveThought>MA_IncenseBurner</ThingToGiveThought>
        <DistanceToGiveThought>4</DistanceToGiveThought>
      </li>
    </modExtensions>
  </ThoughtDef>

  <ThoughtDef MayRequire="OskarPotocki.VanillaFactionsExpanded.Core">
    <defName>StandingIncenseThought</defName>
    <workerClass>VanillaFurnitureExpanded.ThoughtWorker_ThoughtFromNearbyThingDef</workerClass>
    <stages>
      <li>
        <label>pleasant smell</label>
        <description>The perfume of incense calms my mind and my soul.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
    <modExtensions>
      <li Class="VanillaFurnitureExpanded.ThoughtGiverByProximityDefExtension">
        <ThingToGiveThought>MA_StandingIncenseBurner</ThingToGiveThought>
        <DistanceToGiveThought>4</DistanceToGiveThought>
      </li>
    </modExtensions>
  </ThoughtDef>

</Defs>